@{
    Layout = null;
}

@model LoginModel

<html>

    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Utah Carcrash Login</title>
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    </head>

    <body>
        <div class="bg-dark text-white p-2">
            <span class="navbar-brand m-l-2">Site Administration</span>
        </div>
        <div class="d-flex justify-content-center">
            <div class="mt-3 d-flex flex-column justify-content-center align-items-center w-50" style="border: 2px solid #000000; border-radius: .5rem;">

                <div class="d-flex justify-content-center w-100">
                    <h3 class="w-100 bg-dark text-light mt-0 p-2 text-center">Login</h3>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>

                <form method="post" asp-controller="Account" asp-action="Login" class="w-100">
                    <div class="d-flex justify-content-center">
                        <div style="display: grid; grid-template-columns: .8fr 1fr; grid-template-rows: auto; grid-row-gap: .5rem;">
                            <label class="mr-3" asp-for="Username">User Name: </label>
                            <input asp-for="Username" class="form-control" />
                            <label class="mr-3" asp-for="Password">Password: </label>
                            <input asp-for="Password" type="password" class="form-control" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <button class="btn btn-primary" type="submit">Log In</button>
                    </div>

                    <input type="hidden" asp-for="ReturnUrl" />
                </form>
            </div>
        </div>
    </body>
</html>