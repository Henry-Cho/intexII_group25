@model crash_prediction

<div class="container">
    <h3 class="text-center my-3">Select a Impediment Type to See How Dangerous It Can Be!</h3>
    <form method="post" action="FullCalculator">
        <div class="d-flex justify-content-center">
            <div class="mt-3" style="display: grid; grid-template-columns: 1fr 3fr; grid-template-rows:auto; grid-row-gap: .5rem;">
                <label class="mr-3" style="align-self: center;">Driving Impediment:</label>
                <select class="form-control" id="Distraction" onchange="ChangeSelectIntoFloat('Distraction')">
                    <option hidden value="Default">No Impediments</option>
                    <option value="Drowsy">Drowsy Driving</option>
                    <option value="DUI">DUI</option>
                    <option value="DistractedDriving">On Phone</option>
                    <option value="DistractedDriving">Eating</option>
                    <option value="DistractedDriving">Other Distractions</option>
                </select>
                <input type="number" style="align-self: center;" id="Route89" asp-for="@Model.route_89" hidden />
                <input type="number" style="align-self: center;" id="RouteOther" asp-for="@Model.route_Other" hidden />
                <input type="number" style="align-self: center;" id="MilepointOther" asp-for="@Model.milepoint_Other" hidden />
                <input type="number" style="align-self: center;" id="MainRoadOther" asp-for="@Model.main_road_name_Other" hidden />
                <input type="number" style="align-self: center;" id="CityOutside" asp-for="@Model.city_OUTSIDE_CITY_LIMITS" hidden />
                <input type="number" style="align-self: center;" id="CityOther" asp-for="@Model.city_Other" hidden />
                <input type="number" style="align-self: center;" id="CitySaltLake" asp-for="@Model.city_SALT_LAKE_CITY" hidden />
                <input type="number" style="align-self: center;" id="CitySandy" asp-for="@Model.city_SANDY" hidden />
                <input type="number" style="align-self: center;" id="CityWestValley" asp-for="@Model.city_WEST_VALLEY_CITY" hidden />
                <input type="number" style="align-self: center;" id="CountyOther" asp-for="@Model.county_name_Other" hidden />
                <input type="number" style="align-self: center;" id="CountySaltLake" asp-for="@Model.county_name_SALT_LAKE" hidden />
                <input type="number" style="align-self: center;" id="CountyUtah" asp-for="@Model.county_name_UTAH" hidden />
                <input type="number" style="align-self: center;" id="CountyWeber" asp-for="@Model.county_name_WEBER" hidden />
            </div>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <div class="d-flex flex-column mr-5">
                <div class="d-flex align-items-center">
                    <input type="number" style="align-self: center;" id="PedestrianInvolved" asp-for="@Model.pedestrian_involved" hidden />
                </div>
                <div class="d-flex align-items-center">
                    <input type="number" style="align-self: center;" id="BicyclistInvolved" asp-for="@Model.bicyclist_involved" hidden />
                </div>
                <div class="d-flex align-items-center">
                    <input type="number" style="align-self: center;" id="MotorcycleInvolved" asp-for="@Model.motorcycle_involved" hidden />
                </div>
                <div class="d-flex align-items-center">
                    <input type="number" style="align-self: center;" id="ImproperRestraint" asp-for="@Model.improper_restraint" hidden />
                </div>
                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="Unrestrained" asp-for="@Model.unrestrained" hidden />
                </div>
                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="DUI" asp-for="@Model.dui" hidden />
                </div>
                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="IntersectionRelated" asp-for="@Model.intersection_related" hidden />
                </div>
                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="WildAnimalRelated" asp-for="@Model.wild_animal_related" hidden />
                </div>
                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="DomesticRelated" asp-for="@Model.domestic_animal_related" hidden />
                </div>
                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="WorkZone" asp-for="@Model.work_zone_related_Other" hidden />
                </div>
            </div>
            <div class="d-flex flex-column ml-5">

                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="Overturn" asp-for="@Model.overturn_rollover" hidden />
                </div>
                <div class="d-flex align-items-center">


                    <input type="number" style="align-self: center;" id="Commercial" asp-for="@Model.commercial_motor_veh_involved" hidden />
                </div>
                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="Teenage" asp-for="@Model.teenage_driver_involved" hidden />
                </div>
                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="Older" asp-for="@Model.older_driver_involved" hidden />
                </div>
                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="NightDark" asp-for="@Model.night_dark_condition" hidden />
                </div>
                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="SingleVeh" asp-for="@Model.single_vehicle" hidden />
                </div>
                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="DistractedDriving" asp-for="@Model.distracted_driving" hidden />
                </div>
                <div class="d-flex align-items-center">

                    <input type="number" style="align-self: center;" id="Drowsy" asp-for="@Model.drowsy_driving" hidden />
                </div>
                <div class="d-flex align-items-center">
                    <input type="number" style="align-self: center;" id="Roadway" asp-for="@Model.roadway_departure" hidden />
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center my-3">
            <button type="submit" class="btn boxed-btn mr-2">Calculate Crash Severity</button>
            <a class="btn dark-btn" asp-action="DistCalc" asp-controller="Home">Clear</a>
        </div>
    </form>
</div>
