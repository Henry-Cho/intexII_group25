}

@model IntexFinal.Pages.Admin.IndexModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/items/bootstrap/css/bootstrap.min.css" />
    <!-- favicon -->
    <link rel="icon" type="image/x-icon" href="/img/car2-removebg-preview.png">
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
    <!-- fontawesome -->
    <link rel="stylesheet" href="~/lib/items/bootstrap/css/all.min.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="~/lib/items/bootstrap/css/bootstrap.min.css">
    <!-- owl carousel -->
    <link rel="stylesheet" href="~/lib/items/css/owl.carousel.css">
    <!-- magnific popup -->
    <link rel="stylesheet" href="~/lib/items/css/magnific-popup.css">
    <!-- animate css -->
    <link rel="stylesheet" href="~/lib/items/css/animate.css">
    <!-- mean menu css -->
    <link rel="stylesheet" href="~/lib/items/css/meanmenu.min.css">
    <!-- main style -->
    <link rel="stylesheet" href="~/lib/items/css/main.css">
    <!-- responsive -->
    <link rel="stylesheet" href="~/lib/items/css/responsive.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        a.boxed-btn {
            font-family: 'Poppins', sans-serif;
            display: inline-block;
            background-color: #F28123;
            color: #fff;
            padding: 10px 20px;
            border-radius: 50px;
            -webkit-transition: 0.3s;
            -o-transition: 0.3s;
            transition: 0.3s;
        }

            a.boxed-btn:hover {
                background-color: #051922;
                color: #F28123;
            }

        a.bordered-btn {
            border-radius: 50px;
            -webkit-transition: 0.3s;
            -o-transition: 0.3s;
            transition: 0.3s;
            font-family: 'Poppins', sans-serif;
            display: inline-block;
            color: #fff;
            border: 2px solid #F28123;
            padding: 10px 20px;
        }

            a.bordered-btn:hover {
                background-color: #F28123 !important;
                color: #fff;
            }

        button.boxed-btn {
            font-family: 'Poppins', sans-serif;
            display: inline-block;
            background-color: #F28123;
            color: #fff;
            padding: 10px 20px;
            border-radius: 50px;
            -webkit-transition: 0.3s;
            -o-transition: 0.3s;
            transition: 0.3s;
        }

            button.boxed-btn:hover {
                background-color: #051922;
                color: #F28123;
            }

        button.bordered-btn {
            border-radius: 50px;
            -webkit-transition: 0.3s;
            -o-transition: 0.3s;
            transition: 0.3s;
            font-family: 'Poppins', sans-serif;
            display: inline-block;
            color: #fff;
            border: 2px solid #F28123;
            padding: 10px 20px;
        }

            button.bordered-btn:hover {
                background-color: #F28123 !important;
                color: #fff;
            }

        .hero-image {
            /* Use "linear-gradient" to add a darken background effect to the image (photographer.jpg). This will make the text easier to read */
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/img/hero.jpg');
            /* Set a specific height */
            height: 25%;
            /* Position and center the image to scale nicely on all screens */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
        }

        /* Place text in the middle of the image */
        .hero-text {
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
        }
    </style>
    <base href="/" />
</head>
<body>
    <component type="typeof(Routed)" render-mode="Server" />
    <script src="_framework/blazor.server.js"></script>
</body>
</html>
